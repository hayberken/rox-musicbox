#!/usr/bin/env python
import findrox
import rox
from rox import g
import gtkexcepthook
import musicbox

try:
	import rox.basedir
except ImportError:
	rox.croak('Need ROX-Lib 1.9.7 or later:\n'
		'http://rox.sourceforge.net/rox_lib.html')

if g.pygtk_version < (1,99,17):
	rox.croak('Need pygtk 1.99.17 or later:\n'
		'http://www.daa.com.au/~james/software/pygtk/')

try:
	g.threads_init()
except RuntimeError:
	rox.croak('You must have threads compiled into your PyGTK!')


box = musicbox.MusicBox()
box.show()

g.threads_enter()
rox.mainloop()
g.threads_leave()
